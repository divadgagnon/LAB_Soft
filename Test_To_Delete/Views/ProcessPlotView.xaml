<UserControl x:Class="LAB.Views.ProcessPlotView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:lvc="clr-namespace:LiveCharts;assembly=LiveCharts"
        mc:Ignorable="d ignore"
        DataContext="{Binding ProcessPlot, Source={StaticResource Locator}}">

    <Grid>
        <lvc:LineChart Series="{Binding DataSeries}" LegendLocation="Left" Width="auto" Height="auto" Background="White" Foreground="#FF9E0000" BorderBrush="#FF1109BD" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <lvc:LineChart.AxisX>
                <lvc:Axis Title="Time (s)"/>
            </lvc:LineChart.AxisX>
            <lvc:LineChart.AxisY>
                <lvc:Axis Title="Temperature (°C)"/>
            </lvc:LineChart.AxisY>
        </lvc:LineChart>
    </Grid>
</UserControl>
